<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_java_websocket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java-WebSocket连接" />

        <Button
            android:id="@+id/btn_send_java_websocket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="java_websocket发送" />

        <Button
            android:id="@+id/btn_close_java_websocket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭java_websocket" />

        <Button
            android:id="@+id/btn_okhttp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="okhttp3连接" />


        <Button
            android:id="@+id/btn_send_okhttp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="okhttp发送" />


        <Button
            android:id="@+id/btn_close_okhttp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭okhttp3" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:textIsSelectable="true"
            android:id="@+id/tv_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>